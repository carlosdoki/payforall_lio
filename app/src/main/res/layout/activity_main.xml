<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.camiladoki.pay4all_lio.MainActivity">

    <EditText
        android:id="@+id/valorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="Digite o valor a ser cobrado"
        android:inputType="numberDecimal"
        app:layout_constraintLeft_toLeftOf="@+id/gerarQR"
        app:layout_constraintRight_toRightOf="@+id/gerarQR"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/gerarQR"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gerar QR Code"
        app:layout_constraintRight_toRightOf="@+id/imgView"
        app:layout_constraintLeft_toLeftOf="@+id/imgView"
        app:layout_constraintHorizontal_bias="0.502"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/valorText" />

    <ImageView
        android:id="@+id/imgView"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        app:srcCompat="@android:color/background_light"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/gerarQR" />

</android.support.constraint.ConstraintLayout>
